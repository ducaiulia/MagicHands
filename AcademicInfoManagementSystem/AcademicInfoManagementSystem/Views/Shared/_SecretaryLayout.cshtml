<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academic Info Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Academic Info Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <h3>Menu</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li>@Html.ActionLink("Home", "Index", "Secretary")</li>
                    <li>@Html.ActionLink("Teachers", "Teachers", "Secretary")</li>
                    <li>@Html.ActionLink("Students", "Students", "Secretary")</li>
                    <li>@Html.ActionLink("Courses", "Courses", "Secretary")</li>
                    <li>@Html.ActionLink("Grants", "Grants", "Secretary")</li>
                </ul>
            </div>

            <div class="col-md-10">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Magic Hands Application</p>
                </footer>
            </div>
        </div>
    </div>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>